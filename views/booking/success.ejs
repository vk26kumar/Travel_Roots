<% layout("/layouts/boilerplate") %>

<div class="container receipt-container">

    <div class="receipt-card" id="receipt">

        <h1 class="success-title">ðŸŽ‰ Booking Confirmed</h1>
        <p class="success-sub">Your payment was successful.</p>

        <hr>

        <h3 class="section-title">Booking Details</h3>

        <div class="detail-row">
            <span>Listing</span>
            <strong><%= booking.listing.title %></strong>
        </div>

        <div class="detail-row">
            <span>Location</span>
            <strong><%= booking.listing.location %></strong>
        </div>

        <div class="detail-row">
            <span>Check-in</span>
            <strong><%= booking.fromDate %></strong>
        </div>

        <div class="detail-row">
            <span>Check-out</span>
            <strong><%= booking.toDate %></strong>
        </div>

        <div class="detail-row">
            <span>Nights</span>
            <strong><%= booking.nights %></strong>
        </div>

        <hr>

        <h3 class="section-title">Payment</h3>

        <div class="detail-row">
            <span>Total Paid</span>
            <strong>â‚¹ <%= booking.amount %></strong>
        </div>

        <div class="detail-row">
            <span>Transaction ID</span>
            <strong><%= booking.paymentId %></strong>
        </div>

        <div class="detail-row">
            <span>Status</span>
            <strong class="paid"><%= booking.status %></strong>
        </div>
    </div>

    <div class="receipt-actions">
        <button onclick="window.print()" class="btn btn-outline-dark">
            Download / Print Receipt
        </button>

        <a href="/listings/<%= booking.listing._id %>" class="btn btn-success">
            Go to Listing
        </a>
    </div>

</div>
