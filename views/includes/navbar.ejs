<style>
.navbar {
  background: rgba(255, 255, 255, 0.95) !important;
  backdrop-filter: blur(14px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  padding: 0.6rem 1.2rem;
}

.navbar-brand {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  white-space: nowrap;
}

.navbar-brand i {
  display: flex;
  align-items: center;
  font-size: 1.6rem;
  color: #fe424d;
}

.travel {
  display: inline;
  font-family: "Inter", system-ui, sans-serif;
  font-weight: 800;
  font-size: 1.4rem;
  color: #fe424d;
  margin: 0;
  line-height: 1;
}

.navbar-nav .nav-link {
  font-weight: 600;
  color: #2d2d2d;
  padding: 0.45rem 0.9rem;
  border-radius: 999px;
  transition: all 0.25s ease;
}

.navbar-nav .nav-link:hover {
  background: rgba(254, 66, 77, 0.12);
  color: #fe424d;
}

form[role="search"] {
  background: #fff;
  padding: 0.25rem;
  border-radius: 999px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
}

.search-inp {
  border: none;
  outline: none;
  border-radius: 999px;
  padding: 0.6rem 1rem;
  font-size: 0.95rem;
  width: 220px;
}

.btn-search {
  background-color: #fe424d;
  color: #fff;
  border-radius: 999px;
  padding: 0.55rem 1.3rem;
  display: flex;
  align-items: center;
  gap: 0.45rem;
  font-weight: 600;
  border: none;
  transition: all 0.25s ease;
}

.btn-search:hover {
  background-color: #fe424d;
  box-shadow: 0 8px 20px rgba(254, 66, 77, 0.45);
  transform: translateY(-1px);
}

.fa-circle-user {
  color: #fe424d;
  margin-left: 0.6rem;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.fa-circle-user:hover {
  transform: scale(1.15);
}

.navbar-toggler {
  border: none;
}

.navbar-toggler:focus {
  box-shadow: none;
}

.navbar-nav.ms-auto {
  display: flex;
  align-items: center;
  gap: 0.4rem;
}

</style>

<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top ">
    <div class="container-fluid">
      <span>
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass ms-auto"><h3 class="travel">Travel Roots</h3></i></a>
      </span>
      

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>




      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings"><b>Explore</b></a>
        </div>



        <div class="navbar-nav ms-auto">
          <form class="d-flex" role="search" action="/listings" method="GET">
              <input 
                  class="form-control me-2 search-inp" 
                  type="search" 
                  name="search"  
                  id="searchInput" 
                  placeholder="Search by Location"
                  value="<%= searchQuery %>">
              <button class="btn btn-search" type="submit">
                  <i class="fa-solid fa-magnifying-glass"></i>
                  Search
              </button>
          </form>
      </div>
      

        

        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new"><b>Add your place</b></a>
          <% if(!currUser) { %>
            <a class="nav-link " aria-current="page" href="/signup"><b>Signup</b></a>
            <a class="nav-link " aria-current="page" href="/signup"><b>Login</b></a>
          <% } %>
          <% if(currUser) { %>
          <a class="nav-link" href="/logout "><b>Logout</b></a>
          <a href="/dashboard" class="nav-link"><b>Profile</b></a>
          <i class="fa-solid fa-circle-user fa-2x"></i>
          <% } %>
          
        </div>
        
      </div>
      
  </div>
</nav>







